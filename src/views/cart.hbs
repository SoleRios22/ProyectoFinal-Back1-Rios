<div class="container mt-4">
  <h2>Carrito</h2>
  {{#if cart.products.length}}
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Producto</th>
          <th>Cantidad</th>
        </tr>
      </thead>
      <tbody>
        {{#each cart.products}}
          <tr>
            <td>{{this.product.title}}</td>
            <td>{{this.quantity}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>No hay productos en el carrito</p>
  {{/if}}
</div>
