<h1>Productos</h1>

<ul>
  {{#each products}}
    <li>
      <b>{{this.title}}</b> - ${{this.price}} - {{this.category}}
      <a href="/products/{{this._id}}">Ver</a>
      <button class="addToCart" data-id="{{this._id}}">Agregar al carrito</button>
    </li>
  {{/each}}
</ul>

